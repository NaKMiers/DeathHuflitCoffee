@model List<DeathWishCoffee.Models.Domain.User>
@{
    ViewData["Title"] = "All Users Page";
}

<div class="bg-light mt-5">
    <h2>User List:</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Delete</th>
                <th>Edit</th>
                <th>ID</th>
                <th>Fullname</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>Phone</th>
                <th>Country</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <form method="post" action="/admin/users/delete/@user.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                    <td>
                        <a href="/admin/users/edit/@user.Id" class="btn btn-info">Edit</a>
                    </td>
                    <td>@user.Id</td>
                    <td>@user.Fullname</td>
                    <td>@user.FirstName</td>
                    <td>@user.MiddleName</td>
                    <td>@user.LastName</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Password</td>
                    <td>@user.Phone</td>
                    <td>@user.Country</td>
                    <td>@user.Address</td>
                </tr>
            }
        </tbody>
    </table>
</div>