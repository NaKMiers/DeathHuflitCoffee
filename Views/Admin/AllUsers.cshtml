@model List<DeathWishCoffee.Models.Main.User>
@{
    ViewData["Title"] = "All Users Page";
}

<div class="bg-light p-3 overflow-scroll">
    <div class="d-flex justify-content-center">
        <div class="btn-group mt-5" role="group" aria-label="Basic outlined example">
            <a href="/admin" class="btn btn-outline-primary">Admin</a>
            <a href="/admin/users" class="btn btn-outline-primary">Users</a>
            <a href="/admin/products" class="btn btn-outline-primary">Products</a>
            <a href="/admin/orders" class="btn btn-outline-primary">Orders</a>
            <a href="/admin/reviews" class="btn btn-outline-primary">Reviews</a>
            <a href="/admin/attributes" class="btn btn-outline-primary">Attributes</a>
            <a href="/admin/details" class="btn btn-outline-primary">Details</a>
            <a href="/admin/flavors" class="btn btn-outline-primary">Flavors</a>
            <a href="/admin/flavor-profiles" class="btn btn-outline-primary">Flavor Profiles</a>
            <a href="/admin/formats" class="btn btn-outline-primary">Formats</a>
            <a href="/admin/types" class="btn btn-outline-primary">Types</a>
            <a href="/admin/images" class="btn btn-outline-primary">Images</a>
        </div>
    </div>

    <h1 class="mt-4">User List:</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fullname</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>Phone</th>
                <th>Country</th>
                <th>Address</th>
                <th>Created At</th>
                <th>Last Modified At</th>

                <th>Delete</th>
                <th>Edit</th>
                <th>Order</th>
                <th>Cart</th>
                <th>Add To Cart</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Fullname</td>
                    <td>@user.FirstName</td>
                    <td>@user.MiddleName</td>
                    <td>@user.LastName</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Password</td>
                    <td>@user.Phone</td>
                    <td>@user.Country</td>
                    <td>@user.Address</td>
                    <td>@user.CreatedAt</td>
                    <td>@user.LastModifiedAt</td>

                    <td>
                        <form method="post" action="/admin/users/delete/@user.Id">
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </form>
                    </td>
                    <td>
                        <a href="/admin/users/edit/@user.Id" class="btn btn-info">Edit</a>
                    </td>
                    <td>
                        <a href="/admin/orders/add/@user.Id" class="btn btn-warning">Order</a>
                    </td>
                    <td>
                        <a href="/cart/@user.Id" class="btn btn-success">Cart</a>
                    </td>
                    <td>
                        <a href="/cart/add/@user.Id" class="btn btn-secondary">Add To Cart</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>