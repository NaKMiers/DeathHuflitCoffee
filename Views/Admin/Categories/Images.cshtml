@model List<DeathWishCoffee.Models.Main.Image>

<div class="K__dmsp__divK p-4" style="background-color: black; color: white; width:100%">
    <div class="d-flex justify-content-center">
        <div class="d-flex flex-wrap btn-group mt-5" role="group" aria-label="Basic outlined example">
            <a href="/admin" class="btn btn-outline-primary">Admin</a>
            <a href="/admin/users" class="btn btn-outline-primary">Users</a>
            <a href="/admin/products" class="btn btn-outline-primary">Products</a>
            <a href="/admin/orders" class="btn btn-outline-primary">Orders</a>
            <a href="/admin/reviews" class="btn btn-outline-primary">Reviews</a>
            <a href="/admin/attributes" class="btn btn-outline-primary">Attributes</a>
            <a href="/admin/details" class="btn btn-outline-primary">Details</a>
            <a href="/admin/flavors" class="btn btn-outline-primary">Flavors</a>
            <a href="/admin/flavor-profiles" class="btn btn-outline-primary">Flavor Profiles</a>
            <a href="/admin/formats" class="btn btn-outline-primary">Formats</a>
            <a href="/admin/types" class="btn btn-outline-primary">Types</a>
            <a href="/admin/images" class="btn btn-outline-primary">Images</a>
        </div>
    </div>

    <h1 class="mt-4 mb-4" style="margin: 0; font-size:50px; ">Images</h1>

    <div class="row mt-3">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var item in Model)
            {

                <div class="col-4 col-md-3 p-2">
                    @* <p class="mb-0">ID: @item.Id</p>
            <p class="mb-1">ProductID: @item.ProductId</p> *@

                    <div class="w-100">
                        <img src=@item.Src alt="image" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                </div>
            }
        }
    </div>
</div>
<style>
    .K__dmsp__divK__table__tr__dulieu {
        border: 1px solid white;
        padding: 8px;
        text-align: left;
    }
</style>
