@model List<DeathWishCoffee.Models.Main.Attribute>

<div class="K__dmsp__divK p-4" style="background-color: black; color: white; width:100%">
    <div class="d-flex justify-content-center">
        <div class="btn-group mt-5" role="group" aria-label="Basic outlined example">
            <a href="/admin" class="btn btn-outline-primary">Admin</a>
            <a href="/admin/users" class="btn btn-outline-primary">Users</a>
            <a href="/admin/products" class="btn btn-outline-primary">Products</a>
            <a href="/admin/orders" class="btn btn-outline-primary">Orders</a>
            <a href="/admin/reviews" class="btn btn-outline-primary">Reviews</a>
            <a href="/admin/attributes" class="btn btn-outline-primary">Attributes</a>
            <a href="/admin/details" class="btn btn-outline-primary">Details</a>
            <a href="/admin/flavors" class="btn btn-outline-primary">Flavors</a>
            <a href="/admin/flavor-profiles" class="btn btn-outline-primary">Flavor Profiles</a>
            <a href="/admin/formats" class="btn btn-outline-primary">Formats</a>
            <a href="/admin/types" class="btn btn-outline-primary">Types</a>
            <a href="/admin/images" class="btn btn-outline-primary">Images</a>
        </div>
    </div>

    <h1 class="mt-4 mb-4" style="margin: 0; font-size:50px; ">Attributes</h1>

    <div class="K__dmsp__divK" style="padding-bottom:30px">
        @* <div class="Ksearch__container"
        style="display: flex; margin: 20px;width:50%;padding-left:50px;width:50%;padding-bottom:30px">
        <input type="text" class="search-input" id="searchInput" placeholder="Tìm kiếm từ khóa..."
        style="flex: 1; padding: 8px;; width:50%">
        <button class="search-button" onclick="searchTable()"
        style="padding: 8px; background-color: green; color: white; border: none; cursor: pointer">Tìm
        Kiếm</button>
        </div> *@

        <div class="K__dmsp__divK " style="width: 100%; background-color: black;">
            <table id="productTable" style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                <thead>
                    <tr class="K__dmsp__divK__table__tr">
                        <th style="border: 1px solid white; padding: 8px; text-align: left;background-color: gray;">
                            ID
                        </th>
                        <th style="border: 1px solid white; padding: 8px; text-align: left;background-color: gray;">
                            ProductId</th>
                        <th style="border: 1px solid white; padding: 8px; text-align: left;background-color: gray;">
                            Label</th>
                        <th style="border: 1px solid white; padding: 8px; text-align: left;background-color: gray;">
                            Value</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="K__dmsp__divK__table__tr__dulieu" style="">@item.Id</td>
                                <td class="K__dmsp__divK__table__tr__dulieu" style="">@item.ProductId</td>
                                <td class="K__dmsp__divK__table__tr__dulieu" style="">@item.Label</td>
                                <td class="K__dmsp__divK__table__tr__dulieu" style="">@item.Value</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    .K__dmsp__divK__table__tr__dulieu {
        border: 1px solid white;
        padding: 8px;
        text-align: left;
    }
</style>
