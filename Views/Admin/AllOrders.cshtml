@model List<DeathWishCoffee.Models.Main.Order>
@{
    ViewData["Title"] = "All Orders Page";
}

<div class="bg-light p-3 ps-4 pe-4 overflow-scroll">
    <div class="d-flex justify-content-center">
        <div class="btn-group mt-5" role="group" aria-label="Basic outlined example">
            <a href="/admin" class="btn btn-outline-primary">Admin</a>
            <a href="/admin/users" class="btn btn-outline-primary">Users</a>
            <a href="/admin/products" class="btn btn-outline-primary">Products</a>
            <a href="/admin/orders" class="btn btn-outline-primary">Orders</a>
            <a href="/admin/reviews" class="btn btn-outline-primary">Reviews</a>
            <a href="/admin/attributes" class="btn btn-outline-primary">Attributes</a>
            <a href="/admin/details" class="btn btn-outline-primary">Details</a>
            <a href="/admin/flavors" class="btn btn-outline-primary">Flavors</a>
            <a href="/admin/flavor-profiles" class="btn btn-outline-primary">Flavor Profiles</a>
            <a href="/admin/formats" class="btn btn-outline-primary">Formats</a>
            <a href="/admin/types" class="btn btn-outline-primary">Types</a>
            <a href="/admin/images" class="btn btn-outline-primary">Images</a>
        </div>
    </div>

    <h2 style="border-bottom:2px solid #000; font-size: 40px">Orders List:</h2>

    <ul class="order-list ">
        @foreach (var order in Model)
        {
            <li class="order-item">
                <div class="action-buttons" style="padding-top: 20px">
                    <a href="/admin/orders/delete/@order.Id" class="btn btn-danger">Delete</a>
                    <a href="/admin/orders/edit/@order.Id" class="btn btn-info">Edit</a>
                    <a href="/admin/orders/detail/@order.Id" class="btn btn-warning">Detail</a>
                    <a href="/admin/orders/@order.UserId" class="btn btn-success">This user's orders</a>
                </div>

                <div class="order-details" style="border-bottom: 1px solid rgb(131, 115, 123);">
                    <p><strong>ID:</strong> @order.Id</p>
                    <p><strong>User ID:</strong> @order.UserId</p>
                    <p><strong>Total Amount:</strong> @order.TotalAmount.ToString("C2")</p>
                    <p><strong>Status:</strong> @order.Status</p>
                    <p><strong>Products:</strong>
                        @if (order.OrderDetails != null && order.OrderDetails.Count > 0)
                        {
                        <ul class="product-list">
                                @foreach (var oD in order.OrderDetails)
                                {
                                <li>@oD.Product?.Title</li>
                                }
                        </ul>
                        }
                    </p>
                    <p><strong>CreatedAt:</strong> @order.CreatedAt</p>
                    <p><strong>LastModifiedAt:</strong> @order.LastModifiedAt</p>
                </div>
            </li>
        }
    </ul>
</div>
<style>
    .btn-secondary {
        color: #fff;
        background-color: #565e64;
    }

    .btn-secondary:hover {
        color: #fff;
        background-color: #000;
        border: 1px solid #565e64;
    }

    .btn-danger {
        color: #fff;
    }

    .btn-danger:hover {
        color: red;
        background-color: #000;
        border: 1px solid red;
    }

    .btn-info:hover {
        color: #3132f2;
        background-color: #000;
        border: 1px solid #3132f2;
    }

    .btn-warning:hover {
        color: #ffc239;
        background-color: #000;
        border: 1px solid #ffc239;
    }

    .btn-success:hover {
        color: #157347;
        background-color: #000;
        border: 1px solid #157347;
    }
</style>