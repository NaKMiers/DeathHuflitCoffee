@model DeathWishCoffee.Models.ViewModels.RegisterRequest

<div class="Kaccount_Main">
   <h1 style="width: 448px; height: 52px; color:white; margin-bottom: 35px; margin-top: 0;">
      <strong>Create account</strong>
   </h1>

   <form action="/account/register" method="post" class="Kaccount_Main_form_bentrong">
      <div class="form-floating mb-3">
         <input asp-for="FirstName" name="firstName" type="name" class="form-control" placeholder="First Name" required
            minlength="3" maxlength="100">
         <label for="floatingInput" class="text-start">First Name</label>
      </div>
      <div class="form-floating mb-3">
         <input asp-for="LastName" name="lastName" type="name" class="form-control" placeholder="Last Name" required
            minlength="3" maxlength="100">
         <label for="floatingInput" class="text-start">Last Name</label>
      </div>

      <div class="form-floating mb-3" style="width: 500px;">
         <input asp-for="Email" name="email" type="email" class="form-control" placeholder="name@example.com" required>
         <label for="floatingInput" class="text-start">Email address</label>
      </div>

      <div class="form-floating mb-3" style=" width:500px;">
         <input asp-for="Password" name="password" type="password" class="form-control" placeholder="password" required
            minlength="6" maxlength="100">
         <label for="floatingPassword" class="text-start">Password</label>
      </div>
      <br>
      <div>
         <button type="submit" class="Kaccount_button">Create</button>
      </div>
   </form>

   </form>
